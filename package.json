{
  "name": "istanbul-oxi",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:inst:spec": "wasm-pack build packages/istanbul-oxi-instrument-wasm --target nodejs",
    "build:plugin": "cargo build -p swc-plugin-istanbul-oxi --target wasm32-wasi",
    "test": "npm-run-all build:inst:spec build:plugin && cross-env FILTER=\"yield|object-spread|ignore|meta-property|for-of\" mocha",
    "test:debug": "npm-run-all build:inst:spec build:plugin && cross-env FILTER=\"yield\" DEBUG=1 mocha",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kwonoj/istanbul-oxi.git"
  },
  "keywords": [],
  "author": "",
  "license": "",
  "bugs": {
    "url": "https://github.com/kwonoj/istanbul-oxi/issues"
  },
  "homepage": "https://github.com/kwonoj/istanbul-oxi#readme",
  "devDependencies": {
    "@istanbuljs/schema": "^0.1.3",
    "@swc-node/register": "^1.4.2",
    "@swc/core": "^1.2.171",
    "@taplo/cli": "^0.3.2",
    "@types/chai": "^4.3.0",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash.clone": "^4.5.6",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "husky": "^7.0.4",
    "js-yaml": "^4.1.0",
    "lint-staged": "^12.3.7",
    "lodash.clone": "^4.5.0",
    "mocha": "^9.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write",
    "*.toml": [
      "taplo format"
    ],
    "*.rs": [
      "cargo fmt --"
    ]
  }
}
